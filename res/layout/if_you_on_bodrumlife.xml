<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

        >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/if_you_background">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="5"
            android:layout_marginLeft="10dp"
            >

    <ImageView
            android:id="@+id/if_you_on_bodrumlife_ico"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:src="@drawable/bodrum_launcher"/>
    <TextView
                android:id="@+id/left_text_about_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:textSize="12dp"
                android:text="@string/text_sixth_about"
                />
    <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/left_text_about"
            android:layout_weight="2"
            android:textSize="9dp"
            android:text="@string/text_about"
            android:textColor="@color/color_black"
            />
    </LinearLayout>

    <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="7"
            android:orientation="vertical"
            >
        <ImageView
                android:id="@+id/if_you_on_bodrumlife_red_line"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:src="@drawable/bodrum_launcher"
                android:paddingTop="10dp"
                android:paddingBottom="30dp"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/liner_opacity"
            android:layout_weight="3"
            android:background="@color/color_white"

            android:layout_marginRight="4dp"
            >

    <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/right_text_if_you_on_bodrumlife_first"
            android:text="@string/text_first_about"
            android:textColor="@color/color_black"
            android:layout_weight="3"

            android:textSize="9dp"
            android:paddingTop="15dp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/right_text_about_second"
                android:layout_weight="4"
                android:textSize="9dp"
                android:text="@string/text_second_about"
                android:textColor="@color/color_black"
                 />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/right_text_about_third"
                android:layout_weight="4"
                android:paddingBottom="10dp"
                android:textColor="@color/color_black"
                android:text="@string/text_third_about"
                android:textSize="9dp"
                />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/right_text_about_fourth"
                android:layout_weight="4"
                android:textSize="10dp"
                android:text="@string/text_forth_about"
                android:textColor="@color/color_black"

                />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/right_text_about_fifth"
                android:layout_weight="4"
                android:text="@string/text_fifth_about"
                android:textSize="9dp"
                android:textColor="@color/color_black"
                />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/right_text_about_sixth"
                android:layout_weight="4"
                android:textSize="9dp"
                android:text="@string/text_seventh_about"
                android:textColor="@color/color_black"
                />
    </LinearLayout>

</LinearLayout>
</RelativeLayout>